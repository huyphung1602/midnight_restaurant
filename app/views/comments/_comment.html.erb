<div class="row">

  <div class="col-sm-10">

  <blockquote class="blockquote">

    <div class="user_star" data-score= <%= comment.rating %> ></div><br>
    <p class="mb-0"> <%= comment.body %> </p>
    <footer class="blockquote-footer"> <%= comment.name %> <cite title="Source Title"></cite></footer>
    <br>

    <%= link_to 'Delete', [comment.food_item, comment], class: 'btn btn-danger btn',
    method: :delete,
    data: { confirm: 'Are you sure?'} %><br>

  </blockquote>

  </div>

</div>

<script>
    $('.user_star').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
  
  $('#user_star').raty({
    path: '/assets',
    scoreName: 'comment[rating]'
  });
</script>