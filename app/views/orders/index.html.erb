<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Food name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <% if order.food_item_id == @item.id %>
        <tr>
          <td><%= order.food_item_id %></td>
          <td><%= order.quantity %></td>
          <td><%= link_to 'Destroy', "/food_items/#{order.food_item_id}/orders/#{order.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>