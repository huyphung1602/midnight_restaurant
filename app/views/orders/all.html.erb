<p id="notice"><%= notice %></p>

<h1> All Orders (for admin only)</h1>

<table>
  <thead>
    <tr>
      <th>Food name</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.food_item.name %></td>
        <td><%= order.quantity %></td>
        <td><%= link_to 'Destroy', "/food_items/#{order.food_item_id}/orders/#{order.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>